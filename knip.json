{
  "ignore": [
    "core/mpc/types/**",
    "clients/desktop/wailsjs/**",
    "core/ui/providers/ResponsivenessProvider.tsx",
    "lib/ui/form/FormCheckBadge.tsx",
    ".claude/**",
    ".cursor/**",
    ".venv/**",
    ".yarn/releases/**"
  ],
  "ignoreBinaries": [
    "tsx",
    "wails"
  ],
  "ignoreDependencies": [
    "babel-plugin-react-compiler",
    "@bufbuild/buf",
    "@bufbuild/protoc-gen-es"
  ],
  "workspaces": {
    "clients/desktop": {
      "project": [
        "**/*.{ts,tsx}"
      ]
    },
    "clients/extension": {
      "entry": [
        "src/background/index.ts",
        "src/content/index.ts",
        "src/inpage/index.ts",
        "src/pages/index.tsx",
        "src/pages/popup.tsx"
      ],
      "project": [
        "src/**/*.{ts,tsx}"
      ],
      "ignoreDependencies": [
        "@types/chrome",
        "@fontsource/montserrat",
        "@fontsource/roboto-mono"
      ]
    },
    "core/inpage-provider": {
      "project": [
        "**/*.{ts,tsx}"
      ]
    },
    "core/extension": {
      "project": [
        "**/*.{ts,tsx}"
      ]
    },
    "lib/extension": {
      "project": [
        "**/*.{ts,tsx,js}"
      ]
    },
    "core/ui": {
      "entry": [
        "vite/plugins.ts",
        "vite/staticCopy.ts"
      ],
      "project": [
        "**/*.{ts,tsx}"
      ],
      "ignoreDependencies": [
        "vite-plugin-static-copy"
      ]
    },
    "lib/utils": {
      "project": [
        "**/*.{ts,tsx}"
      ]
    },
    "lib/ui": {
      "project": [
        "**/*.{ts,tsx}"
      ]
    },
    "core/chain": {
      "project": [
        "**/*.{ts,tsx}"
      ]
    }
  }
}