{
  "name": "vultisig-windows",
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "./**",
    "!vendor/**"
  ],
  "scripts": {
    "lint": "eslint 'clients/desktop/src/**/*.{js,jsx,ts,tsx}' 'clients/extension/src/**/*.{js,jsx,ts,tsx}' 'core/**/*.{js,jsx,ts,tsx}' 'lib/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint 'clients/desktop/src/**/*.{js,jsx,ts,tsx}' 'clients/extension/src/**/*.{js,jsx,ts,tsx}' 'core/**/*.{js,jsx,ts,tsx}' 'lib/**/*.{js,jsx,ts,tsx}' --fix",
    "dev:desktop": "wails dev",
    "dev:desktop:vite": "yarn workspace @clients/desktop dev",
    "build:desktop": "yarn workspace @clients/desktop build",
    "build:extension": "yarn workspace @clients/extension build",
    "dev:extension": "yarn workspace @clients/extension dev",
    "build": "yarn workspace @clients/desktop build",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "knip": "knip",
    "check:all": "yarn lint && yarn typecheck && yarn test && yarn knip",
    "knip:fix": "knip --fix --allow-remove-files",
    "check": "yarn typecheck && yarn lint:fix && yarn knip",
    "translate": "yarn workspace @core/ui translate",
    "update": "yarn set version latest && yarn dlx npm-check-updates@latest -u --workspaces --root && yarn install"
  },
  "dependencies": {
    "7z-wasm": "^1.2.0",
