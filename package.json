{
  "name": "vultisig-windows",
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "./**",
    "!vendor/**"
  ],
  "scripts": {
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint/ 'clients/desktop/src/**/*.{js,jsx,ts,tsx}' 'clients/extension/src/**/*.{js,jsx,ts,tsx}' 'core/**/*.{js,jsx,ts,tsx}' 'lib/**/*.{js,jsx,ts,tsx}'",
    "lint:fix": "eslint --cache --cache-location node_modules/.cache/eslint/ 'clients/desktop/src/**/*.{js,jsx,ts,tsx}' 'clients/extension/src/**/*.{js,jsx,ts,tsx}' 'core/**/*.{js,jsx,ts,tsx}' 'lib/**/*.{js,jsx,ts,tsx}' --fix",
    "dev:desktop": "wails dev",
    "dev:desktop:vite": "yarn workspace @clients/desktop dev",
    "build:desktop": "yarn workspace @clients/desktop build",
    "build:extension": "yarn workspace @clients/extension build",
    "dev:extension": "yarn workspace @clients/extension dev",
    "build": "yarn workspace @clients/desktop build",
    "typecheck": "tsgo --noEmit",
    "test": "vitest run",
    "knip": "knip",
    "check:all": "yarn lint && yarn typecheck && yarn test && yarn knip",
    "knip:fix": "knip --fix --allow-remove-files",
    "check": "concurrently --kill-others-on-fail \"yarn typecheck\" \"yarn lint:fix\" && yarn knip && (yarn translate || true)",
    "translate": "yarn workspace @core/ui translate",
    "update": "yarn set version latest && yarn dlx npm-check-updates@latest -u --workspaces --root && yarn install"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@google-cloud/translate": "^9.3.0",
    "@types/node": "^25.2.1",
    "@types/react": "^19.2.13",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@typescript/native-preview": "^7.0.0-dev.20260219.1",
    "babel-plugin-react-compiler": "^1.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-compiler": "^19.1.0-rc.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^10.2.7",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^17.3.0",
    "knip": "^5.83.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@noble/curves": "^1.9.0",
    "lottie-react": "^2.4.1",
    "react-markdown": "^10.1.0"
  }
}
