{
  "name": "vultisig-win",
  "version": "0.1.0",
  "scripts": {
    "prepare": "husky",
    "lint:frontend": "cd frontend && eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "lint:frontend:fix": "cd frontend && eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "format:frontend": "cd frontend && prettier --write 'src/**/*.{ts,tsx,js,jsx,json,css,scss,md}'"
  },
  "devDependencies": {
    "eslint": "^9.8.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.3"
  },
  "lint-staged": {
    "frontend/src/**/*.{js,jsx,ts,tsx}": [
      "cd frontend && eslint --fix",
      "cd frontend && prettier --write"
    ]
  }
}
