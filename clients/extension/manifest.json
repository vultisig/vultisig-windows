{
  "manifest_version": 3,
  "name": "Vulticonnect",
  "version": "0.1.0",
  "version_name": "0.1.0",
  "description": "VultiConnect is a Chrome extension that integrates Vultisig into web apps.",
  "author": {
    "name": "Vultisig",
    "email": "info@vultisig.com",
    "url": "https://vultisig.com"
  },
  "action": {
    "default_popup": "src/pages/popup/popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.ts"],
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/relay/index.ts"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["wallet-core.wasm"],
      "use_dynamic_url": false
    },
    {
      "matches": ["<all_urls>"],
      "resources": [
        "src/content/index.ts",
        "src/relay/index.ts",
        "src/pages/popup/popup.html",
        "src/pages/vault/vault.html",
        "src/pages/vaults/vaults.html",
        "src/pages/transaction/transaction.html",
        "src/pages/accounts/accounts.html",
        "src/pages/import/import.html"
      ],
      "use_dynamic_url": true
    }
  ],
  "host_permissions": ["https://*/*"],
  "permissions": ["storage"],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' http://localhost:5173; object-src 'self';"
  }
}
