{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["../../core/*"],
      "@lib/*": ["../../lib/*"]
    }
  },
  "include": [
    "src/**/*",
    "../../core/mpc/types/vultisig/vault/v1/vault_container_pb.ts",
    "../../core/mpc/types/vultisig/vault/v1/vault_pb.ts",
    "../../lib/utils/fromBase64.ts",
    "../../lib/utils/encryption/aesGcm/decryptWithAesGcm.ts",
    "../../lib/utils/encryption/aesGcm/AesGcmInput.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}