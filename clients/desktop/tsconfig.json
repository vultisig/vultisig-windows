{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "global.d.ts", "../../core/ui/i18n/**/*.d.ts", "../../core/ui/inputs", "../../lib/ui/dnd", "../../core/ui/page", "../../lib/ui/inputs/switchControlContainer", "../../lib/ui/inputs/text-input", "../../lib/ui/inputs/AmountTextInput.tsx", "../../lib/ui/inputs/RadioInput.tsx"],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
